# Variables de entorno para producción

# Base de datos PostgreSQL
# Reemplaza con tus credenciales reales
DATABASE_URL="postgresql://usuario:contraseña@host:puerto/base_datos?schema=public&sslmode=require"

# JWT Secret (genera uno nuevo con: openssl rand -base64 32)
JWT_SECRET=cambia-esto-por-una-clave-muy-segura-en-produccion
JWT_EXPIRES_IN=24h

# Puerto del servidor
PORT=3000

# Entorno
NODE_ENV=production
